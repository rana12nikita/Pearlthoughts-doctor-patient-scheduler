generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// =============================================================
//                           MODELS
// =============================================================

// ---------------------------
// USER (Auth)
// ---------------------------
model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  name      String?
  role      String // "doctor" | "patient" | "admin"
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // One-to-one (OPTIONAL) relations — defined on the CHILD side
  doctor  Doctor?
  patient Patient?
}

// ---------------------------
// DOCTOR
// ---------------------------
model Doctor {
  id                Int     @id @default(autoincrement())
  name              String
  email             String?
  schedule_Type     String?
  patients_per_slot Int?

  // FK to User (one-to-one)
  userId Int?  @unique
  user   User? @relation(fields: [userId], references: [id])

  // Relations
  sessions       Session[]
  availabilities DoctorAvailability[]
  appointments   Appointment[]
}

// ---------------------------
// PATIENT
// ---------------------------
model Patient {
  id    Int     @id @default(autoincrement())
  name  String
  email String?

  // FK → User
  userId Int?  @unique
  user   User? @relation(fields: [userId], references: [id])

  appointments Appointment[]
}

// ---------------------------
// DOCTOR AVAILABILITY (Legacy)
// ---------------------------
model DoctorAvailability {
  id                Int      @id @default(autoincrement())
  doctorId          Int
  date              DateTime
  session_start     DateTime
  session_end       DateTime
  slot_duration_min Int?
  patients_per_slot Int?

  doctor       Doctor        @relation(fields: [doctorId], references: [id])
  appointments Appointment[]
}

// ---------------------------
// SESSION (Elastic Scheduling)
// ---------------------------
model Session {
  id             Int      @id @default(autoincrement())
  doctorId       Int
  date           DateTime
  startTime      DateTime
  endTime        DateTime
  slotDuration   Int      @default(10)
  schedulingType String?
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt

  doctor       Doctor             @relation(fields: [doctorId], references: [id])
  appointments Appointment[]
  changeLogs   SessionChangeLog[]
}

// ---------------------------
// APPOINTMENT (Legacy + Session)
// ---------------------------
model Appointment {
  id Int @id @default(autoincrement())

  doctorId       Int?
  availabilityId Int?
  sessionId      Int
  patientId      Int

  date      DateTime?
  startTime DateTime
  endTime   DateTime
  duration  Int

  status   String  @default("booked")
  locked   Boolean @default(false)
  priority String  @default("normal")

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  // Relations
  doctor       Doctor?             @relation(fields: [doctorId], references: [id])
  availability DoctorAvailability? @relation(fields: [availabilityId], references: [id])
  session      Session             @relation(fields: [sessionId], references: [id])
  patient      Patient             @relation(fields: [patientId], references: [id])
}

// ---------------------------
// SESSION CHANGE LOG
// ---------------------------
model SessionChangeLog {
  id         Int       @id @default(autoincrement())
  sessionId  Int
  userId     Int?
  changeType String
  oldStart   DateTime?
  oldEnd     DateTime?
  newStart   DateTime?
  newEnd     DateTime?
  payload    Json
  createdAt  DateTime  @default(now())

  session Session @relation(fields: [sessionId], references: [id])
}
